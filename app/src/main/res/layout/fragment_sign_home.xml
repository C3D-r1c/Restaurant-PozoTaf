<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="iam.abdoulkader.pozotaf.fragment.SignHomeFragment">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg1"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#33FFFFFF"
        android:paddingBottom="40dp"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/pozautaf"
                android:scaleType="centerInside"
                android:cropToPadding="true" />

            <com.thebrownarrow.customfont.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:gravity="left"
                android:textAllCaps="true"
                android:text="@string/home_sign_str"
                android:textColor="@color/white"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:shadowColor="@color/black"
                android:textSize="30sp"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="20dp"
                app:custom_typeface="font/roboto/Roboto-Regular.ttf"/>

            <iam.abdoulkader.pozotaf.view.RippleView
                android:id="@+id/fb_signin_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/fb_bg"
                android:textAllCaps="true"
                android:gravity="center"
                android:text="Se connecter avec facebook"
                android:textColor="#fff" />

            <iam.abdoulkader.pozotaf.view.RippleView
                android:id="@+id/gmail_signin_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/gmail_bg"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="Se connecter avec google"
                android:textColor="#fff" />

            <iam.abdoulkader.pozotaf.view.RippleView
                android:id="@+id/email_signup_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/other_bg"
                android:gravity="center"
                android:text="Creer un compte"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                app:alphaFactor="0.7"
                app:rippleColor_1="@color/colorPrimary" />

            <iam.abdoulkader.pozotaf.view.RippleView
                android:id="@+id/email_signin_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/other_bg"
                android:gravity="center"
                android:text="Se connecter par email"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                app:alphaFactor="0.7"
                app:rippleColor_1="@color/colorPrimary" />

        </LinearLayout>

    </ScrollView>

    <com.thebrownarrow.customfont.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/copyright"
        android:textColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        app:custom_typeface="font/benton/BentonThin.otf"/>

</RelativeLayout>
